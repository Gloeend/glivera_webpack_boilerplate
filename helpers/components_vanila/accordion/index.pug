
mixin accordion(data, prefix)
	- itemClass = prefix ||'accordion';
	ul(class= itemClass)
		each item in data
			li(class= `${itemClass}__item`)
				div(class= `${itemClass}__item_head`)
					div(class= `${itemClass}__item_title`)= item.title
					div(class= `${itemClass}__item_icon_w`)
						+icon('arrow-down', 'size-mod')
				div(class= `${itemClass}__item_body`)
					div(class= `${itemClass}__item_body_in`)= item.descr
						block

